pipeline {
    agent any

    stages {
        stage('Prepare Tools') {
            steps {
                
                echo 'Preparing tools...'
                sh "apt-get install python3 python3-pip -y"
                sh "git clone https://github.com/kubernetes-sigs/kubespray.git"
                sh "cd kubespray" 
                sh "pip install -r requirements-2.12.txt"
            
            }
        }
        stage('Build') {
            steps {
                echo 'Build...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}