pipeline {
    agent any

    stages {
        stage('Prepare Tools') {
            steps {
                
                echo 'Preparing tools...'
                sh "git clone https://github.com/kubernetes-sigs/kubespray.git"
                sh "cd kubespray" 
                sh "pip install -r requirements.txt"
            
            }
        }
        stage('Build') {
            steps {
                echo 'Build...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}